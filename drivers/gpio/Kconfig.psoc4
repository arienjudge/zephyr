# Workaround for not being able to have commas in macro arguments
DT_COMPAT_CYPRESS_PSOC4_GPIO := cypress,psoc4-gpio

config GPIO_PSOC6
	bool "Cypress PSoC-4 GPIO driver"
	default y if $(dt_compat_enabled,$(DT_COMPAT_CYPRESS_PSOC4_GPIO))
	depends on SOC_FAMILY_PSOC4
	help
	  Enable support for the Cypress PSoC-4 GPIO controllers.
