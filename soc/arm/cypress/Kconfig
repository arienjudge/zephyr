choice
	prompt "Cypress PSoC6 MCU Selection"
	depends on SOC_SERIES_PSOC62 || \
		   SOC_SERIES_PSOC63

config SOC_PSOC6_M0
	bool "SOC_PSOC6_M0"
	select CPU_CORTEX_M0PLUS
	select CPU_CORTEX_M_HAS_SYSTICK
	select CPU_CORTEX_M_HAS_VTOR

config SOC_PSOC6_M4
	bool "SOC_PSOC6_M4"
	select CPU_CORTEX_M4
	select CPU_CORTEX_M_HAS_DWT
	select CPU_CORTEX_M_HAS_SYSTICK

endchoice

choice
	prompt "Cypress PSoC4 MCU Selection"
	depends on SOC_SERIES_PSOC42

config SOC_PSOC4_M0
	bool "SOC_PSOC4_M0"
	select CPU_CORTEX_M0
	select CPU_CORTEX_M_HAS_SYSTICK

config SOC_PSOC4_M0PLUS
	bool "SOC_PSOC4_M0PLUS"
	select CPU_CORTEX_M0PLUS
	select CPU_CORTEX_M_HAS_SYSTICK
	select CPU_CORTEX_M_HAS_VTOR

endchoice

config SOC_PSOC6_M0_ENABLES_M4
	bool "Dual-core support [activate Cortex-M4]"
	depends on SOC_PSOC6_M0
	help
	  Cortex-M0 CPU should boot Cortex-M4

config SOC_FAMILY_PSOC6
	bool

if SOC_FAMILY_PSOC6

config SOC_FAMILY
	string
	default "cypress"

source "soc/arm/cypress/psoc6/Kconfig.soc"

endif # SOC_FAMILY_PSOC6


config SOC_FAMILY_PSOC4
	bool

if SOC_FAMILY_PSOC4

config SOC_FAMILY
	string
	default "cypress"

source "soc/arm/cypress/psoc4/Kconfig.soc"

endif # SOC_FAMILY_PSOC4
